<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_fix_reservation_view" model="ir.ui.view">
            <field name="name">Update Quant Reservation</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <button name="action_update_quantity_on_hand" position="after">
                    <button string="Fix Reservations"
                            type="object"
                            name="action_fix_reservation"
                            attrs="{'invisible': ['|', ('attribute_line_ids', '&lt;=', 0), ('is_product_variant', '=', True)]}"
                            modifiers="{'invisible':['|',['attribute_line_ids','&lt;=',0],['is_product_variant','=',true]]}"
                            options="{}"/>
                </button>

            </field>
        </record>

    </data>
</odoo>
