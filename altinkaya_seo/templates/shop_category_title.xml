<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="shop_category_title" inherit_id="website_sale.products"
              name="Shop Category Title SEO">

        <xpath expr="//t[@t-set='additional_title']" position="replace">
            <t t-set="additional_title" t-value="category.name if category else additional_title"/>
        </xpath>

    </template>
</odoo>
