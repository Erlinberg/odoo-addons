<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_search_form" inherit_id="website_sale.search"
              name="Product Search Form SEO">
        <xpath expr="//t[@t-set='action']" position="attributes">
            <attribute name="t-value">keep('/urunler'+ ('/'+slug(category)) if category else None, search=0) or '/urunler'</attribute>
        </xpath>
    </template>

</odoo>
