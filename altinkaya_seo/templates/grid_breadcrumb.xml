<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="products_breadcrumb_seo" inherit_id="website_sale.products_breadcrumb"
              name="Product Grid Breadcrumb">
        <xpath expr="//a[@href='/shop']" position="replace">
            <a href="/urunler">Products</a>
        </xpath>
        <xpath expr="//a[@t-field='cat.name']" position="replace">
            <a t-att-href="keep('/urunler/%s' % slug(cat), category=0)" t-field="cat.name"/>
        </xpath>
    </template>
</odoo>
