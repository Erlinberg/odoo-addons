<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_res_partner_inherite_view" model="ir.ui.view">
            <field name="name">res.partner.inherit.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
               <field name="country_id" position="after">
                    <field name="district_id" placeholder="District"
                        context="{'state_id': state_id}"/>
                    <field name="region_id" placeholder="Region"
                        context="{'district_id': district_id}"/>
                    <field name="neighbour_id" placeholder="Neighbour"
                        context="{'region_id': region_id}"/>
               </field>
            </field>
        </record>
   </data>
</openerp>








