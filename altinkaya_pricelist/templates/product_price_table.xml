<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_price_table" inherit_id="website_sale.product"
              name="Product Price Table">
        <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="before">
            <div class="col-6 mb-2 js_pricelist_table"></div>
        </xpath>
    </template>

    <template id="altinkaya_pricelist.product_price_table_html" name="Product Price Table">
        <table class="table table-sm table-bordered table-striped text-center align-middle p-0 m-0"
               id="product_price_table">
            <thead class="o_product_table_head">
                <tr>
                    <th class="p-0">Qty*</th>
                    <th class="p-0">Price</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="pricelist_content" t-as="plist">
                 <tr>
                    <td class="p-1" t-esc="plist['qty']"></td>
                    <td class="p-1">
                        <span t-esc="currency_id.symbol" class="oe_currency_value"></span><span t-esc="plist['price']"></span>
                    </td>
                </tr>
                </t>

            </tbody>
        </table>
        <span class="text-muted" style="font-size:0.75rem;">* Contact us for higher quantities.</span>
    </template>


</odoo>
