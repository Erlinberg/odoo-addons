<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_attributes_body" inherit_id="website_sale.product"
              name="Product attributes table">
        <xpath expr="//div[@id='o_product_terms_and_share']" position="after">
            <t t-set="attachments"
               t-value="product._prepare_product_attachments_table()"/>
            <t t-if="attachments">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="m-0">Attachments</h3>
                    </div>
                    <div id="product_attachments">
                        <div class="row">
                            <div class="col-lg-4 col-12">
                                <table class="table border rounded">
                                    <t t-foreach="attachments" t-as="attachment">
                                        <tr>
                                            <span t-if="attachment.usage == 'dxf'">
                                                <td>
                                                    <h6>
                                                        <i class="fa fa-file-zip-o"/>
                                                        DXF
                                                    </h6>
                                                </td>
                                            </span>
                                            <span t-if="attachment.usage == '3d'">
                                                <td>
                                                    <h6>
                                                        <i class="fa fa-cube"/>
                                                        3D
                                                    </h6>
                                                </td>
                                            </span>
                                            <span t-if="attachment.usage == 'pdf'">
                                                <td>
                                                    <h6>
                                                        <i class="fa fa-file-pdf-o"/>
                                                        PDF
                                                    </h6>
                                                </td>
                                            </span>
                                            <span t-if="attachment.usage == 'ip_certificate'">
                                                <td>
                                                    <h6>
                                                        <i class="fa fa-file-text-o"/>
                                                        IP Certificate
                                                    </h6>
                                                </td>
                                            </span>
                                            <span t-if="attachment.usage == 'general'">
                                                <td>
                                                    <h6>
                                                        <i class="fa fa-file"/>
                                                        Other Attachment
                                                    </h6>
                                                </td>
                                            </span>

                                            <td class="text-center">
                                                <a t-attf-href="/web/content/#{attachment.id}?download=true&amp;access_token=#{attachment.access_token}">
                                                    <h4><i class="fa fa-download"/></h4>
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
