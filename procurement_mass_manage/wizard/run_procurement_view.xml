<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Run Schedulers -->
        <record id="view_run_procurement_wizard" model="ir.ui.view">
            <field name="name">Run Procurement</field>
            <field name="model">procurement.run.wiz</field>
            <field name="arch" type="xml">
                <form string="Run Parameters">
                    <p>
                        Run all procurements in the background.
                    </p>
                    <footer>
                        <button name="run_procurement" string="Run Procurement" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Run Procurement"
            res_model="procurement.run.wiz"
            src_model="procurement.order"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            groups="procurement_mass_manage.mass_edit_procurement_order"
            id="wiz_action_run_procurement"/>

    </data>
</openerp>
