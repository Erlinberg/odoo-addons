<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_html_description" inherit_id="website_sale.product"
              name="Description for products">
        <xpath expr="//div[@id='product_full_description']" position="replace">
            <div class="container">
                <div itemprop="description" t-field="product.public_description"
                     id="product_full_description"/>
            </div>
        </xpath>
    </template>
</odoo>
