<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_public_category_form_ecommerce" model="ir.ui.view">
        <field name="name">product.public.category.form.ecommerce</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id"
               ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="is_published" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
    <record id="product_public_category_tree_ecommerce" model="ir.ui.view">
        <field name="name">product.public.category.tree.ecommerce</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id"
               ref="website_sale.product_public_category_tree_view"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="is_published" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>